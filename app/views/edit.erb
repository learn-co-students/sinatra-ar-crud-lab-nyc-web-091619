<form action="/articles/<%= @article.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <ul>
    <li>
      <label>Title</label>
      <input type="text" name="title" value="<%= @article.title %>" />
    </li>
    <li>
      <label>Content</label>
      <input type="text" name="content"  value="<%= @article.content %>" />
    </li>
  </ul>
  <input type="submit" />
</form>